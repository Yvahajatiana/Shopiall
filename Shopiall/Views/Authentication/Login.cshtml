
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <form action="/authentication/token" method="get">
        <div class="mb-3">
            <label for="shop" class="form-label">Shop Name</label>
            <input type="text" class="form-control" id="shop" aria-describedby="shopHelp" name="shop">
            <div id="shopHelp" class="form-text">The name of your shop</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

